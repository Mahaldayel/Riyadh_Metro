            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_GateNumber"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/GateNumber"
                        android:layout_width="match_parent"
                        android:layout_margin="15dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/arrivalT"
                        android:hint="Gate Number"
                        android:textSize="18sp"
                        android:inputType="number" />
                    <!--or with letters-->

                </android.support.design.widget.TextInputLayout>



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_date"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/date"
                        android:layout_margin="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Trip Date"
                        android:layout_marginTop="180dp"
                        android:textSize="18sp"
                        android:inputType="date"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_metroStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Metro"
                    />
                <Spinner
                    android:layout_margin="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/spinnerMetro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/Add"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Trip" />


        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
