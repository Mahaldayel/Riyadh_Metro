<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/full_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_margin="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="50"
                >
                <TextView
                    android:id="@+id/tripDate"
                    android:textSize="18dp"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trip Date"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                     />


                <TextView
                    android:id="@+id/tripDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    tools:text="12/12/2018" />
            </LinearLayout>

                <TextView
                    android:layout_weight="50"
                    android:id="@+id/buttonViewOption"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="&#8942;"
                    android:textAppearance="?android:textAppearanceLarge" />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_margin="8dp"
            android:padding="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="50"
                >


                <TextView
                    android:textSize="18dp"
                    android:id="@+id/leavingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leaving Time"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    />
                <TextView
                    android:id="@+id/leavingTimetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    tools:text="11:00 PM" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="50"

                >

                <TextView
                    android:textSize="18dp"
                    android:id="@+id/leavingPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="leaving station"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    />

                <TextView
                    android:id="@+id/laevingPlaceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Western"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_margin="8dp"
            android:padding="8dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="50"
                >
                <TextView
                    android:textSize="18dp"
                    android:id="@+id/arrivingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arriving Time"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    />


                <TextView
                    android:id="@+id/arrivingTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@android:color/black"

                    tools:text="02:11 AM" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="50"
                >

                <TextView
                    android:textSize="18dp"
                    android:id="@+id/arrivingPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="arriving station"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    />
                <TextView
                    android:id="@+id/arrivingPlaceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olaya"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

